<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    >

   <android.support.constraint.ConstraintLayout
       android:padding="@dimen/margin_tiny"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/tv_req_date"
           android:layout_width="0dp"
           android:textColor="@color/colorAccent"
           android:layout_height="wrap_content"
           android:layout_marginEnd="@dimen/margin_tiny"
           app:layout_constraintBottom_toBottomOf="@id/tv_req_cancel"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toLeftOf="@id/tv_req_cancel"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/tv_req_state"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/normal_text"
           android:textStyle="italic"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tv_req_cancel" />

       <TextView
           android:visibility="gone"
           android:id="@+id/tv_req_compdate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/margin_tiny"
           android:textSize="@dimen/normal_text"
           android:textStyle="italic"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tv_req_cancel" />

       <TextView
           android:id="@+id/tv_req_cancel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/cancel_rounded_border"
           android:padding="@dimen/margin_tiny"
           android:text="@string/cancel_order_lbl"
           android:textColor="@color/red_cancel"
           android:textSize="@dimen/normal_text"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

   </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>